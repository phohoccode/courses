<form method="POST" action="/course/stored">
  <h2 style="margin-bottom: 32px;">Thêm khoá học</h2>
  <div class="mb-3">
    <label for="name" class="form-label">Tên khoá học</label>
    <input type="text" class="form-control" name="name" id="name" required />
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Mô tả khoá học</label>
    <input
      type="text"
      class="form-control"
      name="description"
      id="description"
      required
    />
  </div>
  <div class="mb-3">
    <label for="videoId" class="form-label">VideoId</label>
    <input
      type="text"
      class="form-control"
      name="videoId"
      id="videoId"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary">Thêm khoá học</button>
</form>